#!/bin/bash

if [ "$*" == "" ]; then
    echo "You choosed no package"
    sleep 3
    exit 1
fi

echo "You choosed to update $1"
read  -n 1 -p "Press enter to continue the update" Press any key to proceed
exec /opt/shellpkg-repo/$1/update.sh
clear
echo "Hey, if you are seeing this text, probably the folder don't exist, or it was named wrong. The script will exit"
sleep 3
exit 1

