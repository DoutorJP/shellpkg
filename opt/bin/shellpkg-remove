#!/bin/bash

if [ "$*" == "" ]; then
    echo "No package selected."
    exit 1
fi

echo "Package $ selected for removal:"
#TODO: check for depending packages, prompt if all of them shall be uninstalled
read -n1 -p "Press any key to continue or hit ^c to abort."
exec /opt/shellpkg-repo/$1/remove.sh

echo "Unrecognized package: $1"
exit 1

