#!/bin/bash

if [ "$*" == "" ]; then
    echo "No package selected."
    exit 1
fi

echo "Package $1 selected for update:"
#TODO: read metadata to check for new dependencies and conflicts
read -n1 -p "Press any key to continue or hit ^c to abort."
exec /opt/shellpkg-repo/$1/update.sh
echo "Unknown package: $1"
exit 1

